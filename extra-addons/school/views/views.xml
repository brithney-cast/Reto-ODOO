<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="school.subject_list">
      <field name="name">Lista Asignatura</field>
      <field name="model">school.subject</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="credits"/>
          <field name="max_students"/>
          <field name="active"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="school.subject_forms">
      <field name="name">Formulario Asignatura</field>
      <field name="model">school.subject</field>
      <field name="arch" type="xml">
        <form string="Asignatura">
          <sheet>
            <group>
              <field name="name"/>
              <field name="credits"/>
              <field name="max_students"/>
              <field name="active"/>
              <field name="student_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="school.action_subject_window">
      <field name="name">Asignatura</field>
      <field name="res_model">school.subject</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
